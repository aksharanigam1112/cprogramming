#include <iostream>

using namespace std;
int fact(int x)
{
    if(x==1)
    {
        return 1;
    }
    else
    {
        return x*fact(x-1);
    }
}
int main()
{
    int x;
    cout << "please input the value of x" << endl;
    cin>>x;
    cout<<"THE FACTORIAL OF "<< x << " IS " << fact(x)<<endl;
    return 0;
}
